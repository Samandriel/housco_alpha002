= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} Prohibited this user from being saved:"
      %ul
        - @user.errors.full_message.each do |msg|
          %li msg

  .field
  = f.label :email
  = f.text_field :email

  .field
  = f.label :password
  = f.password_field :password

  .field
  = f.label :confirm_password
  = f.password_field :confirm_password

  .actions
  = f.submit  
